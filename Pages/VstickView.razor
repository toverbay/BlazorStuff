@page "/vstick-view"

@inject IJSRuntime js

<h3>Virtual Joystick Demo</h3>

<div class="container text-center">
    <div class="row justify-content-evenly">
        <div class="col">
            <h5>JS Component</h5>
            <div id="js-vstick"></div>
        </div>
        <div class="col align-items-center">
            <h5>Razor Component</h5>
            <Vstick SizePx="200"/>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        _ = await js.InvokeAsync<bool>("addJoystick", "#js-vstick", 200);
    }
}
